<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="set a title:"
        android:id="@+id/newmarker_dialog_txtview"
        android:layout_below="@+id/a"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_weight="0.13" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/newmarker_dialog_edittxt"
        android:hint="enter a title here"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.02">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/newmarker_dialog_cancel_btn"
            android:background="@color/MycolorAccent"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:fadingEdge="horizontal|vertical"
            android:padding="10dp"
            android:layout_margin="10dp" />

        <Button
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:id="@+id/newmarker_dialog_ok_btn"
            android:background="@color/MycolorAccent"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:layout_margin="10dp"
            android:padding="10dp" />


    </LinearLayout>



</LinearLayout>